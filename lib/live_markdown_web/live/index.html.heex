<section class="row">
  <ul>
  <%= for post <- @posts do %>
    <li>
      <%= live_redirect post.title, to: post.slug %> (<%= Date.to_iso8601(post.date) %>) <%= raw post.summary %>
    </li>
  <% end %>
  </ul>
</section>

<section class="row">
  <%= raw generate_taxonomy_tree(@taxonomy_tree) %>
</section>